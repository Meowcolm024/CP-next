TargetStep   :: '' ::=

  defn
  t >-> t'
  :: :: target_step :: 'TS_'
  {{ com Record Calculus Structrual Reduction }}
  by

  t >-> t'
  -------------------- :: Proj1
  t . ll >-> t' . ll
  
  t >-> t'
  -------------------- :: AppL
  t t2 >-> t' t2

  value tv
  t >-> t'
  -------------------- :: AppR
  tv t >-> tv t'

  t >-> t'
  -------------------- :: MergeL
  t ; t2 >-> t' ; t2

  value tv
  t >-> t'
  -------------------- :: MergeR
  tv ; t >-> tv ; t'

  t >-> t'
  --------------------------------- :: RcdHead
  ll => t , t2 >-> ll => t' , t2

  value tv
  t >-> t'
  --------------------------------- :: RcdTail
  ll => tv , t >-> ll => tv , t'

  value tv
  -------------------- :: MergeEmpty
  {} ; tv >-> tv

  value tv1
  value tv2
  value tv3
  --------------------------------------------------- :: MergeRcd
  (ll => tv1 , tv2) ; tv3 >-> ll => tv1 , (tv2 ; tv3)

  value tv
  lookup ll tv => t
  --------------------------------------------------- :: ProjRcd
  tv . ll >-> t
  
  ----------------------------- :: AppAbs
  (\ x . t)  tv  >-> t [x~>>tv]

  ----------------------------- :: Fixpoint
  fix x.t  >-> t [x~>>fix x.t]


