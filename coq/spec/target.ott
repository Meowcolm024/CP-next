TargetEqIndexType :: '' ::=

  defn
  At ~= Bt :: :: eqIndTypTarget :: TEI_
  {{ com Types with the same index }}
  by

  --------------- :: top
  Top ~= Top

  --------------- :: bot
  Bot ~= Bot

  --------------- :: base
  Base ~= Base
  
  % At ~= Bt
  % Bt ~= Ct
  % --------------- :: trans
  % At ~= Ct

  % Bt ~= At
  % --------------- :: symm
  % At ~= Bt

  At1 ~= At2
  Bt1 ~= Bt2
  ---------------------- :: arrow
  At1->Bt1 ~= At2->Bt2

  recTyp Ct
  recTyp Ct'
  (lookup ll Ct => At' and At' ~= At) or lookup ll Ct =/> 
  (lookup ll Ct => Bt' and Bt' ~= Bt) or lookup ll Ct' =/> 
  At ~= Bt
  Ct ~= Ct'
  ------------------------- :: rcd
  ll:At, Ct ~= ll:Bt, Ct'

  recTyp Ct
  (lookup ll1 Ct => At' and At' ~= At) or lookup ll1 Ct =/> 
  (lookup ll2 Ct => Bt' and Bt' ~= Bt) or lookup ll2 Ct =/> 
  ll1 != ll2
  ll2:Bt, (ll1:At, Ct) ~= Ct'
  ---------------------------------------------- :: comm
  ll1:At, (ll2:Bt, Ct) ~= Ct'

  recTyp Ct
  (lookup ll Ct => At' and At' ~= At) or lookup ll Ct =/> 
  At ~= Bt
  ll:Bt, (ll:At, Ct) ~= Ct'
  ---------------------------------------------- :: dup
  ll:At, (ll:Bt, Ct) ~= Ct'

