WARN_MSG = "(* !!! WARNING: AUTO GENERATED. DO NOT MODIFY !!! *)\n"

OTT_LOC    = ../spec

## Name of the submakefile generated by coq_makefile
COQMKFILENAME=CoqSrc.mk

LIBNAME="Top"

SYNTAX=syntax
TARGET=rules

FILES     = $(SYNTAX)_ott $(TARGET)_inf $(TARGET)_inf2
VFILES   = $(foreach i, $(FILES), $(i).v)
VOFILES  = $(foreach i, $(FILES), $(i).vo)

.SECONDARY: $(VFILES)

all: coq

quick:  $(COQMKFILENAME) $(VFILES)
	@$(MAKE) -f CoqSrc.mk quick

coq: $(COQMKFILENAME) $(VFILES)
	@$(MAKE) -f CoqSrc.mk

%.vo: %.v
	@$(MAKE) -f CoqSrc.mk $*.vo


$(SYNTAX)_ott.v: $(OTT_LOC)/rules.ott $(OTT_LOC)/target.ott
	ott -i $(OTT_LOC)/rules.ott -i $(OTT_LOC)/target.ott -o $(SYNTAX)_ott.v -coq_lngen true -coq_expand_list_types true
	@if grep '<<no parses (' $@ >/dev/null 2>&1 && \
	[ -z "$(DONTSTOP)" ]; then \
		echo; \
	echo "***** OTT PARSE ERROR(S) *****"; \
		grep -n '<<no parses (' $@; \
		$(RM) $@; \
		exit 1; \
	fi >&2
	sed -i '1iSet Warnings "-notation-overridden,-parsing,-deprecated-hint-without-locality".\nFrom Coq Require Import Strings.String.\n' $(SYNTAX)_ott.v
	sed -i 's/texp_fixpoint (texp_var_f x)/texp_fixpoint (texp_var_b 0)/g' $(SYNTAX)_ott.v



$(TARGET)_inf.v: $(OTT_LOC)/rules.ott
	lngen --coq $(TARGET)_inf.v --coq-ott $(SYNTAX)_ott $(OTT_LOC)/rules.ott

$(TARGET)_inf2.v: $(OTT_LOC)/target.ott
	@echo "metavariables definition are uncommented in $(OTT_LOC)/target.ott to use lngen"
	sed 's/^%//' $(OTT_LOC)/target.ott > $(OTT_LOC)/target2.ott
	lngen --coq $(TARGET)_inf2.v --coq-ott $(SYNTAX)_ott $(OTT_LOC)/target2.ott
	rm $(OTT_LOC)/target2.ott


$(COQMKFILENAME): Makefile $(SYNTAX)_ott.v # $(TARGET)_inf.v
	{ echo "-R . $(LIBNAME)" ; ls *.v ; } > _CoqProject && coq_makefile -arg '-w -variable-collision,-meta-collision,-require-in-module' -f _CoqProject -o $(COQMKFILENAME)


coqclean:
	rm -f .*.d *.conf .*.aux *.v-e *.v.d *.vo *.vok *.vos *.glob $(COQMKFILENAME)

ottclean:
	rm -f $(SYNTAX)_ott.v $(TARGET)_inf.v

clean: coqclean
