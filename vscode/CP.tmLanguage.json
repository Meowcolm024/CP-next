{
  "name": "CP",
  "scopeName": "source.cp",
  "fileTypes": [
    "cp"
  ],
  "patterns": [
    {
      "name": "comment.line.double-dash.cp",
      "begin": "--",
      "end": "$"
    },
    {
      "name": "comment.block.cp",
      "begin": "{-",
      "end": "-}"
    },
    {
      "name": "constant.numeric.cp",
      "match": "\\b(\\d+(.\\d+)?([eE][+-]?\\d+)?|0[xX][\\da-fA-F]+|0[oO][0-7]+)\\b"
    },
    {
      "name": "constant.language.cp",
      "match": "\\b(true|false|undefined)\\b"
    },
    {
      "name": "keyword.cp",
      "match": "\\b(type|typerec|forall|trait|implements|inherits|new|if|then|else|let|letrec|open|in|with|toString|fold|unfold)\\b"
    },
    {
      "name": "storage.type.cp",
      "match": "\\b(Int|Double|Bool|String|Top|Bot|Trait)\\b"
    },
    {
      "name": "storage.modifier.cp",
      "match": "\\b(override)\\b"
    },
    {
      "name": "string.quoted.double.cp",
      "match": "\"([^\\\\\"]|\\\\.)*\"?"
    },
    {
      "name": "string.interpolated.cp",
      "begin": "`",
      "end": "`"
    }
  ]
}
